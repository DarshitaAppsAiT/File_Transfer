<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp_Page">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/splach_background" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        app:srcCompat="@drawable/logo2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="222dp"
        android:text="ShareNow"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="296dp"
        android:layout_height="361dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_design"
            android:enabled="true"
            android:hint="  enter name"
            android:layout_marginTop="4dp"
            android:textAlignment="textStart"
            android:textColorHint="#918E8E"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_design"
            android:enabled="true"
            android:hint="  email@xyz.com"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            android:textColorHint="#918E8E"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_design"
            android:enabled="true"
            android:hint="  ********"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            android:textColorHint="#918E8E"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/btn_design"
            android:enabled="true"
            android:hint="  ********"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            android:textColorHint="#918E8E"
            android:textSize="20dp"
            android:textStyle="normal" />
    </LinearLayout>

    <Button
        android:id="@+id/sgnBtn"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="689dp"
        android:background="@drawable/sgn_btn"
        android:enabled="true"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal|bold" />
    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="765dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account ? "
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here"
            android:textColor="#2B66FF"
            android:textStyle="normal|bold" />
    </LinearLayout>



</RelativeLayout>